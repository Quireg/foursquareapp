<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.widget.Toolbar
        android:id="@+id/toolbar_"
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        tools:navigationIcon="@drawable/appbar_logo_extended_margin"
        tools:title="@string/app_name">

    </android.widget.Toolbar>

    <View
        android:id="@+id/shadowline"
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:layout_below="@id/toolbar_"
        android:background="@drawable/shadowline" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/places_list"
        android:layout_below="@id/shadowline"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="vertical"
        tools:listitem="@layout/places_list_item" />

    <include
        android:id="@+id/loadingView"
        layout="@layout/loading"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone"/>

    <include
        android:id="@+id/errorView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        layout="@layout/error"
        android:visibility="gone" />

</RelativeLayout>




